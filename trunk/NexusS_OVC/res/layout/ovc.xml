<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:id="@+id/lin"
    android:layout_height="fill_parent">
  <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">
      <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:textSize="28dp"
          android:id="@+id/tv_saldo"
          android:text="@string/credit" />
      <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
              <TextView
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:id="@+id/tv_kaartnummer"
              android:text="@string/card_id"
              android:layout_height="wrap_content"/>
              <TextView
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:id="@+id/tv_expdate"
              android:text="@string/expdate"
              android:layout_height="wrap_content"/>
      </LinearLayout>
      <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
              <TextView
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:id="@+id/tv_type"
              android:text="@string/card_type"
              android:layout_height="wrap_content"/>
              <TextView
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:id="@+id/tv_gebdatum"
              android:text="@string/gebdatum"
              android:layout_height="wrap_content"/>
      </LinearLayout>
      <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
              <TextView
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:id="@+id/tv_company"
              android:text="@string/company"
              android:layout_height="wrap_content"/>
              <TextView
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:id="@+id/tv_banned"
              android:text="@string/banned"
              android:layout_height="wrap_content"/>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>